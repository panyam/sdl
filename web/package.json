{
  "name": "sdl-web-dashboard",
  "version": "1.0.0",
  "description": "SDL Canvas Web Dashboard - TypeScript + Tailwind",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "pre-dev-test": "npm run build",
    "pre-dev-quick": "npm run build",
    "pre-dev-screenshot": "npm run build",
    "dev-test": "playwright test development-loop.spec.ts --reporter=line",
    "dev-quick": "playwright test development-loop.spec.ts --grep='quick dashboard validation' --reporter=line",
    "dev-screenshot": "playwright test development-loop.spec.ts --grep='quick dashboard validation' --reporter=line"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@hpcc-js/wasm": "^2.23.0",
    "chart.js": "^4.4.0",
    "dockview-core": "^1.0.0",
    "dockview": "^1.0.0"
  }
}
