{
  "name": "sdl-web-dashboard",
  "version": "1.0.0",
  "description": "SDL Canvas Web Dashboard - TypeScript + Tailwind",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run update-templates",
    "build:only": "vite build && npm run update-templates",
    "update-templates": "node scripts/update-template-assets.js",
    "watch": "tsc && vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:e2e",
    "pre-dev-test": "npm run build",
    "pre-dev-quick": "npm run build",
    "pre-dev-screenshot": "npm run build",
    "dev-test": "playwright test development-loop.spec.ts --reporter=line",
    "dev-quick": "playwright test development-loop.spec.ts --grep='quick dashboard validation' --reporter=line",
    "dev-screenshot": "playwright test development-loop.spec.ts --grep='quick dashboard validation' --reporter=line"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.5.2",
    "@connectrpc/connect": "^2.0.2",
    "@connectrpc/connect-web": "^2.0.2",
    "@hpcc-js/wasm": "^2.23.0",
    "chart.js": "^4.4.0",
    "dockview": "^1.0.0",
    "dockview-core": "^1.0.0",
    "monaco-editor": "^0.52.2"
  }
}
